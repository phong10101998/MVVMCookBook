<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/bg_item_dish">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImageItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/dp_10"
        app:layout_constraintDimensionRatio="334:215"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1">

        <ImageView
            android:id="@+id/imgDish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textTimeCook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_9"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@id/cardImageItem"
        app:layout_constraintTop_toBottomOf="@id/cardImageItem" />

    <TextView
        android:id="@+id/textScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginEnd="@dimen/dp_28"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@id/cardImageItem"
        app:layout_constraintTop_toBottomOf="@id/cardImageItem" />

    <TextView
        android:id="@+id/textTitleDish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_28"
        android:layout_marginTop="@dimen/dp_38"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_28"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="304:65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardImageItem"
        app:layout_constraintWidth_percent="0.93" />
</androidx.constraintlayout.widget.ConstraintLayout>
